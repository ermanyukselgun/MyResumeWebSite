@model MyResumeWebSite.Models.EntityFramework.Education

@{
    ViewBag.Title = "AddEducation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Education</h2>
<hr />
<br />

@using (Html.BeginForm("AddEducation", "Education", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(i => i.University)
        @Html.TextBoxFor(i => i.University, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(i => i.Faculty)
        @Html.TextBoxFor(i => i.Faculty, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(i => i.Department)
        @Html.TextBoxFor(i => i.Department, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(i => i.Degree)
        @Html.TextBoxFor(i => i.Degree, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(i => i.Date)
        @Html.TextBoxFor(i => i.Date, "{0:MM/dd/yy}", new { @class = "form-control", @required = "required" , type = "date" } )
    </div>

    @Html.HiddenFor(i => i.Id)
    @Html.ActionLink("Previous Page", "Index", null, new { @class = "btn btn-warning" })
    <button type="submit" class="btn btn-primary">Save</button>

}




@model MyResumeWebSite.Models.EntityFramework.CoursesContent
@{
    ViewBag.Title = "AddCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Courses</h2>

<hr />
<br />

@using (Html.BeginForm("AddCourses", "Courses", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(i => i.Courses.CourseName)
        @Html.TextBoxFor(i => i.Courses.CourseName, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Courses.Company)
        @Html.TextBoxFor(i => i.Courses.Company, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.CourseContent)
        @Html.TextAreaFor(i => i.CourseContent, new { @class = "form-control", @required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Courses.Date)
        @Html.TextBoxFor(i => i.Courses.Date,"{0:yyyy-MM-dd}", new { @class = "form-control",  @required = "required" , type="date" })
    </div>
    @Html.HiddenFor(i => i.Id)
    @Html.ActionLink("Previous Page", "Index", null, new { @class = "btn btn-warning" })
    <button type="submit" class="btn btn-primary">Save</button>

}




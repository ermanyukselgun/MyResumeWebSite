@using MyResumeWebSite.Models.EntityFramework

@model List<User>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>User List</h2>

<hr />
<a href="/User/AddUser" class="btn btn-success">Add User</a>
<br />
<br />
<div id="Tbl01">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Phone</th>
                <th>Address</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Phone</td>
                    <td>@item.Adress</td>
                    <td><a href="/User/Update/@item.Id" class="btn btn-warning">Update</a></td>
                    <td><a href="/User/Delete/@item.Id" class="btn btn-warning">Delete</a></td>
                </tr>

            }

        </tbody>

    </table>
</div>

